citHeader("To cite the R package 'gglyph' in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("gglyph")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
if (!length(year)) {
 year <- format(packageDate("gglyph"), "%Y")
}
vers <- paste("R package version", meta$Version)

citEntry(entry  = "Manual",
         title  = "gglyph: Multivariate Data Visualization using Glyphs",
         author = personList(person(given = "J.", family = "Aravind",
									                  email = "j.aravind@icar.gov.in",
							                      role = c("aut", "cre"))),
         year = year,
         textVersion = paste(
           "Aravind, J. (",
           year, ").  gglyph: Multivariate Data Visualization using Glyphs. ",
           vers, ", ", "https://aravind-j.github.io/gglyph/",
           ".", sep=""),
         note = {c(paste(vers), "https://aravind-j.github.io/gglyph/")})

citFooter("This free and open-source software implements academic
research by the authors and co-workers. If you use it, please support
the project by citing the package.")
